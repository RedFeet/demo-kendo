{
  "bundles": {
    "src/app-build": {
      "includes": [
        "shared/*.js",
        "*.js",
        "**/*.json!json",
        "*.html!text",
        "shared/*.html!text",
        "installation-wizard/*.js",
        "installation-wizard/*.html!text",
        "about/*.js",
        "about/*.html!text",
        "theme-selector/*.js",
        "theme-selector/*.html!text",
        "help/*.js",
        "help/*.html!text",
        "showdown",
        "jquery",
        "css",
        "text",
        "aurelia-framework",
        "aurelia-bootstrapper",
        "aurelia-router",
        "prism",
        "core-js",
        "babel",
        "aurelia-templating-binding",
        "aurelia-templating-resources",
        "aurelia-templating-router",
        "aurelia-loader-default",
        "aurelia-history-browser",
        "aurelia-logging-console",
        "bootstrap",
        "bootstrap/css/bootstrap.css!text",
        "aurelia-kendoui-plugin",
        "aurelia-kendoui-plugin/**/*",
        "aurelia-kendoui-plugin/**/*.html!text"
      ],
      "excludes": [
        "kendo-ui/js/kendo.all.min.js",
        "kendo-ui/js/kendo.dataviz.min.js",
        "kendo-ui/js/kendo.mobile.min.js"
      ],
      "options": {
        "inject": true,
        "minify": true
      }
    }
  }
}
